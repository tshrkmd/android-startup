<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleDialog" >

    <TextView
        android:id="@+id/activity_dialog_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/activity_dialog_mess" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="#00000000"
        android:layout_alignParentBottom="true"

    >
        <Button
            android:id="@+id/activity_dialog_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_dialog_yes"
            android:layout_weight="1"
        />
        <Button
            android:id="@+id/activity_dialog_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_dialog_no"
            android:layout_weight="1"
        />
    </LinearLayout>

</RelativeLayout>